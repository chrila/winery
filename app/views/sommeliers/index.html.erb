<h1 class="display-4 my-4">Sommeliers</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Age</th>
      <th scope="col">Nationality</th>
      <th scope="col">Journals</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @sommeliers.each do |s| %>
      <tr>
        <th scope="row"><%= s.id %></th>
        <td><%= s.name %></td>
        <td><%= s.age %></td>
        <td><%= s.nationality %></td>
        <td>
          <ul>
          <% s.journal_sommeliers.each do |j| %>
            <li><%= j %></li>
          <% end%>
          </ul>
        </td>
        <td class="button-cell">
          <%= button_to 'Edit', edit_sommelier_path(s), method: :get, class: 'btn btn-secondary mr-1' %>
          <%= button_to 'Delete', s, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-secondary mr-1' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add sommelier', new_sommelier_path %>
